# vi:filetype=gitconfig
[alias]
  c = commit -m             # commit with a message
  ca = commit -am           # commit all files with a message
  co = checkout             # checkout
  d = diff
  ds = diff --cached        # diff staged changes
  dl = diff HEAD^           # diff last commit
  pl = pull                 # pull
  ps = push                 # push

  publish = !BRANCH=$(git branch | grep \\* | awk '{print $2}') && git push -u origin $BRANCH
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto
[core]
  attributesfile = ~/.gitattributes
  excludesfile = ~/.gitignore
  editor = vim
  pager = delta
{% if ansible_facts["os_family"] == "Darwin" %}
[credential]
  helper = osxkeychain
{% endif %}
[delta]
  navigate = true
  line-numbers = true
  hyperlinks = true
  wrap-max-lines = unlimited
[diff]
  algorithm = patience
  colorMoved = plain
  indentHeuristic = true
  renames = copy
  renameLimit = 128000
[interactive]
  diffFilter = delta --color-only
[fetch]
  prune = true
[github]
  user = f1sherman
[init]
  templatedir = ~/.git_template
[merge]
  conflictstyle = diff3
  tool = nvimdiff
[push]
  default = simple # when using 'git push' with no refspec push only to the upstream branch (req git >= 1.7.11)
	autoSetupRemote = true
[rerere]
  enabled = true
[status]
  showUntrackedFiles = all
[user]
  email = brian@brianjohn.com
  name = Brian John
[pull]
  rebase = false
