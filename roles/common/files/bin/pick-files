#!/usr/bin/env bash
# https://github.com/Aider-AI/aider/issues/2156

set -e  # Exit on error

# Ensure PATH includes common tool locations since tmux popups run bash
# (not zsh), so .zshenv isn't sourced
for dir in /opt/homebrew/bin /usr/local/bin "$HOME/bin" "$HOME/.local/bin"; do
  [[ -d "$dir" && ":$PATH:" != *":$dir:"* ]] && PATH="$dir:$PATH"
done

pane_id="${PICK_FILES_PANE:?Set PICK_FILES_PANE to the tmux pane id}"
pane_dir="$PWD"
git_root=$(git rev-parse --show-toplevel 2>/dev/null || echo "$pane_dir")

# gnu coreutils realpath is needed to make the paths relative to the currently active
# tmux pane relative to the git repo root, because aider always wants paths relative
# to the repo root, even if you are in a subdirectory
if [[ "$OSTYPE" == "darwin"* ]]; then
	if ! command -v grealpath >/dev/null 2>&1; then
		echo "grealpath not found. Install with: brew install coreutils" >&2
		exit 1
	fi
	realpath_cmd="grealpath"
else
	if command -v realpath >/dev/null 2>&1; then
		realpath_cmd="realpath"
	elif command -v python3 >/dev/null 2>&1; then
		realpath_cmd=""
	else
		echo "realpath not found. Install coreutils or ensure python3 is available." >&2
		exit 1
	fi
fi

mkdir -p "${HOME}/.config/fzf"

selected_files=$(
	rg --files |
		fzf --multi \
      --history "${HOME}/.config/fzf/history" \
      --scheme path \
			--reverse \
			--preview 'bat --style=numbers --color=always {}' |
		while read -r file; do
			if [[ -n "$realpath_cmd" ]]; then
				"$realpath_cmd" --relative-to="$git_root" "$pane_dir/$file"
			else
				python3 -c 'import os, sys; print(os.path.relpath(sys.argv[1], sys.argv[2]))' "$pane_dir/$file" "$git_root"
			fi
		done
)

if [ -n "$selected_files" ]; then
	files_oneline=$(echo "$selected_files" | tr '\n' ' ' | sed 's/ $//')
	tmux send-keys -t "$pane_id" "$files_oneline"
fi
